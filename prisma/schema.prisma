generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Psicologos {
  id String @id @default(uuid())
  name String
  email String
  password String
  crp String?
  phone String?
  cep String?
  clinicAddress String? @map("clinic_address")
  startingTime String? @map("starting_time")
  endTime String? @map("end_time")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  pacientes Pacientes[] @relation("pacientes")

  @@map("psicologos")
}

model Pacientes {
  id String @id @default(uuid())
  name String
  matricula String @unique
  email String @unique
  password String
  cep String?
  address String?
  phone String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  notes Notes[]

  psicologo Psicologos @relation("pacientes", fields: [psicologoId], references: [id], onDelete: Cascade)
  psicologoId String @map("psicologo_id")

  @@map("pacientes")
}

model Notes {
  id String @id @default(uuid())
  note String
  score Float?
  comment String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  paciente Pacientes @relation(fields: [pacienteId], references: [id])
  pacienteId String

  @@map("notes")
}
