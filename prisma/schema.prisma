generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Psicologos {
  id String @id
  name String
  email String
  password String
  crp String
  phone String
  cep String
  clinicAddress String
  startingTime String
  endTime String

  pacientes Pacientes[] @relation("pacientes")

  @@map("psicologos")
}

model Pacientes {
  id String @id
  name String
  cep String
  address String
  matricula String @unique
  email String @unique
  password String
  phone String

  notes Notes[]

  psicologo Psicologos @relation("pacientes", fields: [psicologoId], references: [id], onDelete: Cascade)
  psicologoId String @map("psicologo_id")

  @@map("pacientes")
}

model Notes {
  id String @id
  note String
  score Float?
  comment String?

  paciente Pacientes @relation(fields: [pacienteId], references: [id])
  pacienteId String

  @@map("notes")
}
